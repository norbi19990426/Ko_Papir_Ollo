<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/rock_player"
        app:srcCompat="@drawable/rock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A te választásod"
        android:textSize="40sp" />


    <ImageView
        android:id="@+id/rock_computer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/rock" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: Ember: 0 "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer: 0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/rock"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:text="Kő" />

        <Button
            android:id="@+id/paper"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:text="Papír" />

        <Button
            android:id="@+id/scrissors"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Olló" />
    </LinearLayout>
</LinearLayout>